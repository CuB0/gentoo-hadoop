[ -d /var/run/pids ] || mkdir -m=777 /var/run/pids

pidfile="/var/run/pid/cassandra.pid"
command="/opt/cassandra/bin/cassandra"
command_args="-p $PIDFILE"
start_stop_daemon_args="-u cassandra"


depend() {
    use net
}

